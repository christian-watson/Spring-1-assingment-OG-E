    private List<List<ReaderEvent>> processTopFive(){
    if (readerIDDict == null || readerIDDict.Count == 0)
    {
        return new List<List<ReaderEvent>>();
    }

    return readerIDDict
        .OrderByDescending(kvp => kvp.Value.Count)
        .Take(5)
        .Select(kvp => kvp.Value)
        .ToList();
